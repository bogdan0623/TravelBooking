@model IEnumerable<TravelBooking.Models.ViewModels.BookingViewModel>

@{
    ViewData["Title"] = "GetUserBookings";
}

<!-- Adăugăm Font Awesome în head -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .btn {
            border-radius: 12px; /* Colțuri rotunjite */
            margin-right: 10px; /* Spațiu între butoane */
            margin-bottom: 5px; /* Spațiu între rânduri de butoane */
        }
    </style>
</head>

<h1 class="text-center mb-4">Rezervările mele</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <i class="fas fa-hotel"></i> Hotel
            </th>
            <th>
                <i class="fas fa-map-marker-alt"></i> Locatie
            </th>
            <th>
                <i class="fas fa-calendar-day"></i> Check-in
            </th>
            <th>
                <i class="fas fa-calendar-alt"></i> Check-out
            </th>
            <th>
                <i class="fas fa-cogs"></i> Status
            </th>
            <th>
                <i class="fas fa-users"></i> Numar de persoane
            </th>
            <th>
                <i class="fas fa-dollar-sign"></i> Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPersons)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-success btn-sm">Edit</a>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-primary btn-sm">Details</a>
                    </div>
                    <div>
                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
